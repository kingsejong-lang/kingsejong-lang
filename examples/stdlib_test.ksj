# ============================================================================
# examples/stdlib_test.ksj - 테스트 프레임워크 예제
# ============================================================================

출력("========================================")
출력("KingSejong 테스트 프레임워크 예제")
출력("========================================")
출력("")

# ============================================================================
# 테스트 1: 수학 연산
# ============================================================================

출력("테스트 1: 수학 연산")
출력("  덧셈 테스트")
assert_같음(2 + 3, 5)
출력("    ✓ 통과")

출력("  뺄셈 테스트")
assert_같음(10 - 3, 7)
출력("    ✓ 통과")

출력("  곱셈 테스트")
assert_같음(4 * 5, 20)
출력("    ✓ 통과")

출력("  나눗셈 테스트")
assert_같음(20 / 4, 5)
출력("    ✓ 통과")

출력("")

# ============================================================================
# 테스트 2: 문자열 연산
# ============================================================================

출력("테스트 2: 문자열 연산")
출력("  문자열 연결")
assert_같음("Hello" + " " + "World", "Hello World")
출력("    ✓ 통과")

출력("  문자열 동등성")
assert_같음("Hello", "Hello")
assert_다름("Hello", "World")
출력("    ✓ 통과")

출력("")

# ============================================================================
# 테스트 3: 불린 값
# ============================================================================

출력("테스트 3: 불린 값")
출력("  참/거짓 검증")
assert_참(참)
assert_거짓(거짓)
출력("    ✓ 통과")

출력("  불린 비교")
assert_다름(참, 거짓)
assert_같음(참, 참)
assert_같음(거짓, 거짓)
출력("    ✓ 통과")

출력("")

# ============================================================================
# 테스트 4: 조건문
# ============================================================================

출력("테스트 4: 조건문")
출력("  참 조건 테스트")
x = 10
만약 (x > 5) {
    assert_참(참)
} 아니면 {
    assert_참(거짓)
}
출력("    ✓ 통과")

출력("  거짓 조건 테스트")
y = 3
만약 (y > 5) {
    assert_참(거짓)
} 아니면 {
    assert_참(참)
}
출력("    ✓ 통과")

출력("")

# ============================================================================
# 테스트 5: assert 기본 기능
# ============================================================================

출력("테스트 5: assert 기본 기능")
출력("  조건 검증")
assert(5 > 3)
assert(10 == 10)
assert("Hello" == "Hello")
출력("    ✓ 통과")

출력("")

# ============================================================================
# 결과
# ============================================================================

출력("========================================")
출력("✓ 모든 테스트 통과!")
출력("========================================")
