{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "KingSejong",
  "scopeName": "source.kingsejong",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#comments" },
    { "include": "#operators" },
    { "include": "#functions" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kingsejong",
          "match": "\\b(만약|아니면|반환|반복한다|반복|번|가져오기)\\b"
        },
        {
          "name": "keyword.other.kingsejong",
          "match": "\\b(부터|까지|초과|이상|이하|미만)\\b"
        },
        {
          "name": "storage.type.kingsejong",
          "match": "\\b(정수|실수|문자열|논리|함수)\\b"
        },
        {
          "name": "constant.language.boolean.kingsejong",
          "match": "\\b(참|거짓)\\b"
        },
        {
          "name": "keyword.operator.josa.kingsejong",
          "match": "\\b(을|를|이|가|은|는|의|로|으로|에서|에)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kingsejong",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kingsejong",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        },
        {
          "name": "string.quoted.single.kingsejong",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.kingsejong",
              "match": "\\\\(['\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.kingsejong",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.kingsejong",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.kingsejong",
          "match": "//.*$"
        },
        {
          "name": "comment.block.kingsejong",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.kingsejong",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.comparison.kingsejong",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.kingsejong",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.kingsejong",
          "match": "="
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.kingsejong",
          "match": "\\b([a-zA-Z가-힣_][a-zA-Z가-힣0-9_]*)(?=\\()"
        }
      ]
    }
  }
}
